{
	"manifest_version": 3,
	"name": "ExtenSwitch",
	"description": "Quickly enable or disable Chrome extensions with just one clickâ€”perfect for managing crypto wallets and other extensions.",
	"version": "1.0",
	"icons": {
		"16": "images/icon-16.png",
		"32": "images/icon-32.png",
		"48": "images/icon-48.png",
		"128": "images/icon-128.png"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "images/icon-16.png",
			"32": "images/icon-32.png",
			"48": "images/icon-48.png",
			"128": "images/icon-128.png"
		}
	},
	"permissions": [
		"management",
		"storage"
	],
	"background": {
		"service_worker": "background.js"
	}
}